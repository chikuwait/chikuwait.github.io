@inproceedings{10.1145/3609510.3609820,
  author = {Nakata, Yuki and Suzuki, Shintaro and Matsubara, Katsuya},
  title = {Reducing Attack Surface with Container Transplantation for Lightweight Sandboxing},
  year = {2023},
  isbn = {9798400703058},
